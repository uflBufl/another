<header class="navbar navbar-fixed-top navbar-inverse my_header">
  <div class="container" onclick="show('navb', 'inline')">

    <nav>
      <%= link_to "WN", root_path, id: "logo" %>
      <ul id="navb" class="nav navbar-nav navbar-right">
        <li><%= link_to "Главная",    root_path %></li>
        <li><%= link_to "Помощь",    help_path %></li>
        <li><%= link_to "О Сайте",   about_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
          <li>
            <%= link_to "Выход", logout_path, method: :delete %>
          </li>
        <% else %>
          <li><%= link_to "Вход", login_path %></li>
          <li><%= link_to "Регистрация", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>